<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ejercicio003"
    android:orientation="vertical">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/PrimerColor">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabilo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ILO"
            android:icon="@drawable/home"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabiglesia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iglesia"
            android:icon="@drawable/location"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabmuelle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muella"
            android:icon="@drawable/location"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabmalecon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Malecon"
            android:icon="@drawable/location"/>

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </androidx.viewpager.widget.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="6dp">

        <Button
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnatrass"
            android:text="AtrÃ¡s" />

    </LinearLayout>


</LinearLayout>

